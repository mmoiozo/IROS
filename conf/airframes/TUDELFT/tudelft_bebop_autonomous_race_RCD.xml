	<!--define name="MT9F002_INITIAL_OFFSET_Y" value="472"/-->
	<!-- Subsystem section -->
    <module name="telemetry" type="transparent_udp"/>
    <module name="radio_control" type="datalink"/>
    <module name="motor_mixing"/>
    <module name="actuators" type="bebop"/>
    <module name="imu" type="bebop"/>
    <!--module name="gps" type="datalink"/-->
    <module name="gps" type="optitrack"/><!--datalink-->
    <module name="stabilization" type="int_quat"/>
    <module name="ahrs" type="int_cmpl_quat">
      <configure name="USE_MAGNETOMETER" value="FALSE"/> <!--TRUE-->
      <define name="AHRS_USE_GPS_HEADING" value="TRUE"/><!--FALSE-->
    </module>
    <module name="ins" type="gps_passthrough"/>
  </firmware>

  <modules main_freq="512">
    <module name="geo_mag"/>
    <module name="air_data"/>
    <module name="send_imu_mag_current"/>
