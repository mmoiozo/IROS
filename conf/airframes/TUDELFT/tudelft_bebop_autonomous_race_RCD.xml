    <module name="send_imu_mag_current"/>
    <module name="command_level_iros"/>
    <module name="cv_ae_awb"/>
    <module name="video_thread"/>
    
    <module name="sonar_bebop"/>
    <module name="pose_history"/>

    <module name="replay_commands">
